{
  "kind": "collectionType",
  "collectionName": "speakers",
  "info": {
    "singularName": "speaker",
    "pluralName": "speakers",
    "displayName": "Speaker",
    "description": "Speakers including pastors and other church speakers"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "title": {
      "type": "string",
      "maxLength": 255,
      "default": ""
    },
    "bio": {
      "type": "text"
    },
    "email": {
      "type": "email"
    },
    "phone": {
      "type": "string",
      "maxLength": 50
    },
    "profileImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "church": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::church.church"
    },
    "yearsOfService": {
      "type": "integer",
      "min": 0
    },
    "socialMedia": {
      "type": "json"
    },
    "speakingTopics": {
      "type": "component",
      "repeatable": true,
      "component": "default.topic"
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    }
  }
}
