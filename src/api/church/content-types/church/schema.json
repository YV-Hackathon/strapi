{
  "kind": "collectionType",
  "collectionName": "churches",
  "info": {
    "singularName": "church",
    "pluralName": "churches",
    "displayName": "Church",
    "description": "Churches and religious organizations"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "denomination": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "description": {
      "type": "text"
    },
    "address": {
      "type": "json"
    },
    "phone": {
      "type": "string",
      "maxLength": 50
    },
    "email": {
      "type": "email"
    },
    "website": {
      "type": "string",
      "maxLength": 255
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "foundedYear": {
      "type": "integer",
      "min": 1800
    },
    "membershipCount": {
      "type": "integer",
      "min": 0
    },
    "serviceTimes": {
      "type": "json"
    },
    "socialMedia": {
      "type": "json"
    },
    "speakers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::speaker.speaker",
      "mappedBy": "church"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    }
  }
}
